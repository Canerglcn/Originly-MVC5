@model Originly_MVC5.ViewModels.GameFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Game</h2>
@using (Html.BeginForm("Create", "Games"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Game.Name)
        @Html.TextBoxFor(m => m.Game.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Game.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Game.ReleaseDate)
        @Html.TextBoxFor(m => m.Game.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Game.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Game.GenreId)
        @Html.DropDownListFor(m => m.Game.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Game.GenreId)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Game.NumberInStock)
        @Html.TextBoxFor(m => m.Game.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Game.NumberInStock)
    </div>

    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}